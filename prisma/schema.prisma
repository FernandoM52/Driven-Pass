generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  email      String       @unique
  password   String
  Credential Credential[]
  Note       Note[]
  Card       Card[]

  @@map("users")
}

model Credential {
  id        Int    @id @default(autoincrement())
  url       String
  title     String
  user      User   @relation(fields: [userEmail], references: [email])
  userEmail String
  userId    Int

  @@unique([title, userEmail])
  @@map("credentials")
}

model Note {
  id        Int    @id @default(autoincrement())
  title     String
  note      String
  user      User   @relation(fields: [userEmail], references: [email])
  userEmail String

  @@unique([title, userEmail])
  @@map("notes")
}

model Card {
  id         Int     @id @default(autoincrement())
  number     String
  issuer     String
  code       String
  expiration DateTime
  password   String
  virtual    Boolean
  type       Type
  title      String
  user       User    @relation(fields: [userEmail], references: [email])
  userEmail  String

  @@unique([title, userEmail])
  @@map("cards")
}

enum Type {
  CREDIT
  DEBIT
  BOTH
}
